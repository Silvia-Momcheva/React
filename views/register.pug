doctype html
html
  head
    title Registration
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
    script(src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js")
    script(src="https://www.gstatic.com/firebasejs/8.10.1/firebase-auth.js")
    script(src="https://www.gstatic.com/firebasejs/8.10.1/firebase-firestore.js")
    script(src="/scripts/firebase.js")
    script(src="/scripts/register.js")   
  body(class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 min-h-screen flex items-center justify-center")

    .bg-white.p-8.rounded-xl.shadow-md.w-full.max-w-sm
      h1.text-2xl.font-bold.mb-6.text-center.text-gray-700 Registration

      form#registerForm
        label.block.text-sm.font-medium.text-gray-700(for="email") Email
        input#email(type="email" required class="mt-1 mb-4 w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500")

        label.block.text-sm.font-medium.text-gray-700(for="password") Password
        input#password(type="password" required class="mt-1 mb-4 w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500")

        label.block.text-sm.font-medium.text-gray-700(for="confirmPassword") Confirm Password
        input#confirmPassword(type="password" required class="mt-1 mb-6 w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500")

        button#registerBtn(type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition") Register

      p.mt-4.text-sm.text-center.text-gray-600
        | Do you have an account?
        a(href="/" class="text-purple-700 hover:underline") Login
